extends layout

//-회원가입 페이지
block content
    .container.tableStyle
        br
        br
        .signupView
            h2 회원가입
            br
            form(action="/signup", method='post')
                .row
                    .col
                        .form-group
                            label.form-label.signupLabel(for='inputName') 이름
                            input#inputName.signupInput(type='name' name="name" required)
                    .col 
                        .form-group 
                            label.form-label(for='inputID') ID
                            input#inputID.signupInput(type='id' name="id" required)
                .row
                    .col
                        .form-group
                            label.form-label(for="inputPassword") Password
                            input#inputPassword.signupInput(type="password" name="password" required)
                .row
                    .col
                        .form-group
                            label.form-label(for="inputEducation") 최종학력
                            select#inputState.form-select(name="education" size="1")
                                option(value='high-school') 고졸
                                option(value='college') 대졸
                                option(value='master') 석사
                                option(value='ph-d') 박사
                        .form-group
                            label.form-label(for="inputDept") 부서
                            select#inputState.form-select(name="department" size="1")
                                option(value='1') 마케팅
                                option(value='2') 연구관리
                                option(value='3') 경영관리
                                option(value='4') 개발
                .row
                    .col 
                        .form-group 
                            label.form-label(for="inputSkill") skill 
                                br
                                each skill in skills
                                    .form-check.form-check-inline
                                        input.form-check-input(type='checkbox', id=`inlineCheckbox${skill.skill_no}`, name='skills' , value=`${skill.skill_no}`)
                                        label.form-check-label(for=`inlineCheckbox${skill.skill_no}`)= skill.skill_name
                .row
                    .col
                        .form-group.summit
                            button.signupBtn(type='submit') 회원가입
        



        
